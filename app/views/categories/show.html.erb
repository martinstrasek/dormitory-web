<div class="category">
<p>
  <h1><%= @category.name %></h1>
  
</p>
<br />
<!--
<p>
  <strong>Parent category:</strong>
  <%= @categories[@categories.index{ |cat| cat.id == @category.parent_id }].name unless @category.parent_id.nil? %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
-->
<% @category.articles.each do |article| %>
	<% if article.published %>
	<div class="panel panel-default">
		<h2><%= article.title %> <small><%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_article_path(article) %></small></h2>
		<p><%= article.body.html_safe %></p>
		<br />
		<p class="text-right text-muted"><small><em>Updated at: <%= article.updated_at%>, by <%= article.user.email %></em></small></p>

		<div class="comments-panel">
			<h4>Comments (<%= article.comments.count %>)</h4>

			<div class="comments">
				<% article.comments.each do |comment| %>
					<div class="comment">
						<p class="bg-info">
						<strong><em><%= comment.user.email %>: </em></strong>
						<%= comment.body %>
						</p>
					</div>

				<% end %>
				<div class="new-comment">
					<%= simple_form_for [article, Comment.new] do |f| %>
						<%= f.input :body, label: false %>
						<%= f.button :submit, 'Add Comment', :class=>"btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>

	</div>
	<% end %>
<% end %>

</div>
