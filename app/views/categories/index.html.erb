<h1>Listing categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Parent Category</th>
      
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to category.name, category %></td>
        <td><%= @categories[@categories.index{ |cat| cat.id == category.parent_id }].name unless category.parent_id.nil? %></td>
        
        <td><%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_category_path(category) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-remove"></span> Remove'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, { :class=>"btn btn-primary"} %>
