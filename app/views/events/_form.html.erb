<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs event">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary" %>
  </div>
<% end %>
