<div class="article">

<div class="panel panel-default">
    <h2><%= @article.title %></h2>
    <p><%= @article.body.html_safe %></p>
    <br />
    <p class="text-right text-muted"><small><em>Updated at: <%= @article.updated_at%>, by <%= @article.user.email %></em></small></p>
</div>

<% if can? :manage, @article %>
	<div class="btn-group">
	  <%= link_to 'Edit', edit_article_path(@article), { :class=>"btn btn-success"} %>
	  <%= link_to 'Back', articles_path, { :class=>"btn btn-default"} %>
	</div>
<% end %>

</div>
