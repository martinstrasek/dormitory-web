<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.check_box :published %> <%= f.label :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:class=>'btn btn-primary' %>
  </div>
<% end %>
